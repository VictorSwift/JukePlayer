<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ll_settings_padding_left"
            android:paddingRight="@dimen/ll_settings_padding_right">

            <TextView
                android:id="@+id/settings_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tv_album_no_of_tracks_height"
                android:layout_marginBottom="@dimen/tv_settings_margin_bottom"
                android:layout_marginLeft="@dimen/tv_settings_margin_left"
                android:layout_marginRight="@dimen/tv_settings_margin_right"
                android:layout_marginTop="@dimen/tv_album_name_margin_top"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                tools:text="Placeholder" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>